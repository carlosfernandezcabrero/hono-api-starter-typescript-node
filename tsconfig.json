{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ESNext",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noImplicitAny": true,
  },
  "exclude": [
    "node_modules",
    "dist",
    ".git",
    "test"
  ],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ]
}